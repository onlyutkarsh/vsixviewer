{
	"name": "vsix-viewer",
	"displayName": "VSIX Viewer",
	"description": "A simple viewer for VSIX files",
	"version": "2.0.0",
	"publisher": "onlyutkarsh",
	"author": {
		"name": "Utkarsh Shigihalli"
	},
	"icon": "images/icon.png",
	"galleryBanner": {
		"color": "#F2F2F2",
		"theme": "light"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/onlyutkarsh/vsixviewer.git"
	},
	"engines": {
		"vscode": "^1.107.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"vsix",
		"viewer",
		"explorer",
		"extension"
	],
	"license": "MIT",
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vsixViewer.openFile",
				"title": "Open File from VSIX"
			},
			{
				"command": "vsixViewer.refresh",
				"title": "Refresh VSIX Files",
				"icon": "$(refresh)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "vsixViewer.refresh",
					"when": "view == vsixViewer",
					"group": "navigation"
				}
			],
			"commandPalette": [
				{
					"command": "vsixViewer.openFile",
					"when": "false"
				},
				{
					"command": "vsixViewer.refresh"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vsix-viewer-container",
					"title": "VSIX Viewer",
					"icon": "images/light/vsix.svg"
				}
			]
		},
		"views": {
			"vsix-viewer-container": [
				{
					"id": "vsixViewer",
					"name": "VSIX Files",
					"when": "vsixViewer.hasFiles",
					"icon": "images/light/vsix.svg"
				},
				{
					"id": "vsixViewer.welcome",
					"name": "VSIX Files",
					"when": "!vsixViewer.hasFiles",
					"icon": "images/light/vsix.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "vsixViewer.welcome",
				"contents": "No VSIX files found in workspace.\n[Refresh](command:vsixViewer.refresh)\nVSIX files are automatically detected when you open a workspace containing them."
			}
		],
		"configuration": {
			"type": "object",
			"title": "VSIX Viewer",
			"properties": {
				"vsixViewer.showBadge": {
					"type": "boolean",
					"default": true,
					"description": "Show badge with count of VSIX files in workspace"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run -S esbuild-base -- --minify",
		"esbuild-base": "rimraf out && esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run -S esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run -S esbuild-base -- --sourcemap --watch",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint src --ext ts",
		"package": "vsce package",
		"deploy": "vsce publish",
		"publish:ovsx": "ovsx publish"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "^25.0.3",
		"@types/vscode": "^1.107.0",
		"@typescript-eslint/eslint-plugin": "^8.19.1",
		"@typescript-eslint/parser": "^8.19.1",
		"@vscode/vsce": "^3.7.1",
		"conventional-changelog-cli": "^5.0.0",
		"esbuild": "^0.27.1",
		"eslint": "^9.17.0",
		"glob": "^13.0.0",
		"mocha": "^11.7.5",
		"ovsx": "^0.10.7",
		"rimraf": "^6.1.2",
		"shx": "^0.4.0",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"jszip": "~3.10.1"
	}
}
